@model PostViewModel

@if (User.Identity.IsAuthenticated)
{
    <section class="PostCreate">
        <form class="postForm">
            <h1>Create a post</h1>
            <div class="postContent">
                <textarea asp-for="@Model.Body" id="postBody" placeholder="Write your post."></textarea>
                <section class="attachmentPreview" style="display: none;">
                    <div class="cover" id="imagePreview">
                    </div>
                </section>
            </div>
            <span asp-validation-for="@Model.Body" class="validation"></span>
        </form>
        <form class="attachmentForm">
            <input class="attachmentInput" id="imageAttachment" type="file" accept="image/jpeg, image/png" style="display: none;">
        </form>
        <section class="actions">
            <button class="addAttachment" type="button" onclick="document.getElementById('imageAttachment').click();">
                <i class="fas fa-image fa-lg fa-fw"></i>
            </button><button class="removeAttachment" type="button" style="display: none;">Remove attachment</button>
            <button class="sendPost" type="button">Submit</button>
        </section>
    </section>
}
else
{
    <section class="Info">
        <header>Welcome to Sfira!</header>
        <p>
            <a id="register" asp-area="@nameof(MroczekDotDev.Sfira.Areas.Account)" asp-page="/Register">Register</a>
            or
            <a id="login" asp-area="@nameof(MroczekDotDev.Sfira.Areas.Account)" asp-page="/Login">Log in</a>
        </p>
    </section>
}
