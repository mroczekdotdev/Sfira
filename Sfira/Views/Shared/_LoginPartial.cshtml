@using Microsoft.AspNetCore.Identity
@using MarcinMroczek.Sfira.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="dropdown">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="avatar" sfira-id="@UserManager.GetUserId(User)" sfira-media="avatar"></div>
    }
    else
    {
        <button class="dropdown-button">Sign In</button>
    }
    <div class="dropdown-content">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="item">
                <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
            </div>
            <div class="item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit">Logout</button>
                </form>
            </div>
        }
        else
        {
            <div class="item">
                <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </div>
            <div class="item">
                <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        }
    </div>
</div>