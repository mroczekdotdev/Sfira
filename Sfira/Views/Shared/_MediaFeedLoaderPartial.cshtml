@model MediaFeedLoaderViewModel

@if (Model.Media.Any())
{
    @(await Component.InvokeAsync<MediaFeedViewComponent>(Model.Media))

    if (Model.HasLoader)
    {
        <section class="item Loader" data-link="@Model.LoaderLink" data-count="@Model.LoaderCount" data-cursor="@Model.LoaderCursor">
            <div class="loaderButton">
                <div class="content">
                    Load<br>more<br>media
                </div>
            </div>
        </section>
    }
}
else
{
    <section class="Info">
        <header>User doesn't have any media</header>
    </section>
}
